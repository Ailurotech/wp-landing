<section class="carousel-section">
    <div class="carousel-container">
        <div class="carousel-title">
            <h1>{{carousel_title[0]}}</h1>
        </div>
        <div class="carousel-title-details">
            <p>{{carousel_title_details[0]}}</p>
        </div>
        <div class="carousel-image-container">
            <a><img class="carousel-image" src="{{carousel_left_img[0]}}" ></a>
            <h2 class="carousel-details-title">{{carousel_detail_left_title[0]}}</h2>
            <p class="carousel-details-title-details">Explore an integrated suite of M&A technologies that bring deeper analysis and faster insights to enable better decision-making around your capital and transaction strategies through to execution.</p>
        </div>
        <div class="carousel-image-container">
            <a><img class="carousel-image" src="{{carousel_right_img[0]}}" ></a>
            <h2 class="carousel-details-title">{{carousel_detail_left_title[0]}}</h2>
            <p class="carousel-details-title-details">Explore an integrated suite of M&A technologies that bring deeper analysis and faster insights to enable better decision-making around your capital and transaction strategies through to execution.<p>
        </div>   
        <div class="carousel-bottom">
            {% for i in 1..3 %}
                <div class="carousel-bottom-details-container">
                    <div class="carousel-circle-container">
                        <div class="carousel-circle">
                            <div class="carousel-circle-number">
                                0 {{ i }}
                            </div>
                         </div>
                    </div>
                    <div class="carousel-bottom-title-container">
                        <h3 class="carousel-bottom-title">123fergrgrhrth</h3>
                    </div>
                    <div class="carousel-bottom-title-details-container">
                        <p class="carousel-bottom-title-details">fgrhrththth</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>