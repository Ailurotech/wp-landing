<section class="carousel-section">
    <div class="main-carousel">
        {% for i in carousel_title %}
        <div class="carousel-cell">
            {% set outer_index = loop.index - 1 %}
            <div class="carousel-title">
                <h1>{{ carousel_title[outer_index] }}</h1>
            </div>
            <div class="carousel-title-details">
                <p>{{ carousel_title_details[outer_index] }}</p>
            </div>
            <div class="carousel-image-container">
                <a><img class="carousel-image" src="{{ carousel_left_img[outer_index] }}" ></a>
                <h2 class="carousel-details-title">{{ carousel_detail_left_title[outer_index] }}</h2>
                <p class="carousel-details-title-details">{{ carousel_detail_left_details[outer_index] }}</p>
            </div>
            <div class="carousel-image-container">
                <a><img class="carousel-image" src="{{ carousel_right_img[outer_index] }}" ></a>
                <h2 class="carousel-details-title">{{ carousel_detail_right_title[outer_index] }}</h2>
                <p class="carousel-details-title-details">{{ carousel_detail_right_details[outer_index] }}</p>
            </div>
            <div class="carousel-bottom">
                {% for j in 1..3 %}
                <div class="carousel-bottom-details-container">
                    <div class="carousel-circle-container">
                        <div class="carousel-circle">
                            <div class="carousel-circle-number">
                                0 {{ j }}
                            </div>
                        </div>
                    </div>
                    <div class="carousel-bottom-title-container">
                        <h3 class="carousel-bottom-title">
                            {% if j == 1 %}
                                {{ carousel_bottom_first_title[outer_index] }}
                            {% elseif j == 2 %}
                                {{ carousel_bottom_second_title[outer_index] }}
                            {% elseif j == 3 %}
                                {{ carousel_bottom_third_title[outer_index] }}
                            {% endif %}
                        </h3>
                    </div>
                    <div class="carousel-bottom-title-details-container">
                        <p class="carousel-bottom-title-details">
                            {% if j == 1 %}
                                {{ carousel_bottom_first_detail[outer_index] }}
                            {% elseif j == 2 %}
                                {{ carousel_bottom_second_detail[outer_index] }}
                            {% elseif j == 3 %}
                                {{ carousel_bottom_third_detail[outer_index] }}
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</section>

