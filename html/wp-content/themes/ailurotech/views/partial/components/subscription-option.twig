<div class="option" data-monthly="{{ monthly_price }}" data-yearly="{{ yearly_price }}">
    <h2>{{ title }}</h2>
    <p>{{ description }}</p>
    <p>$<span class="price">{{ monthly_price }}</span></p>
    <ul>
        {% for feature in features %}
            <li>{{ feature }}</li>
        {% endfor %}
    </ul>
    <a href="{{ button_link }}" class="button">{{ button_text }}</a>
</div>
