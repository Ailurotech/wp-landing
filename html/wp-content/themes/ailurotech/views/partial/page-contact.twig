<div class="contact-container">
    <h1>Get in Touch</h1>
    <p>Leave your message and we'll get back to you shortly.</p>
    <form class="contact-form" action="" method="post">
        <div class="form-group">
            <label for="name">Your name</label>
            <input type="text" id="name" name="name" value="{{ contact_name }}" placeholder="John Doe" required />
        </div>
        <div class="form-group">
            <label for="email">Email address *</label>
            <input type="email" id="email" name="email" value="{{ contact_email }}" placeholder="example@domain.com" required />
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" id="phone" name="phone" value="{{ contact_phone }}" placeholder="+1-999-999-9999" />
        </div>
        <div class="form-group">
            <label for="website">Website URL</label>
            <input type="url" id="website" name="website" value="{{ contact_website }}" placeholder="https://example.com" />
        </div>
        <div class="form-group full-width">
            <label for="message">Message *</label>
            <textarea id="message" name="message" placeholder="Tell us briefly about your needs" required>{{ contact_message }}</textarea>
        </div>
        <button type="submit" class="btn">Send</button>
    </form>
</div>