<div class="footer-content-container">
		<div class="footer-icon-container">
			{% if footer_logo %}
				<img class="footer-logo" src="{{ footer_logo }}" alt="footer logo">
			{% endif %}
			<div class="footer-icon-container">
				{% if links_array and icon_target %}
					{% for icon in links_array %}
						<a href="{{ icon_target[loop.index-1]}}">
							<img class="footer-icons" src="{{ icon }}" alt="Social Media Icon">
						</a>
					{% endfor %}
				{% endif %}
			</div>
		</div>
		<div class="footer-links-container">
			{% if title_of_column and title_of_column[0] %}
				<h3 class="column-title">{{ title_of_column[0] }}</h3>
			{% endif %}
			{% if first_row_title and first_row_links %}
				{% for index in first_row_title %}
					<a href="{{ first_row_links[loop.index-1] }}"><p class="footer-links">{{ index }}</p></a>
				{% endfor %}
			{% endif %}
		</div>
		<div class="footer-links-container">
			{% if title_of_column and title_of_column[1] %}
				<h3 class="column-title">{{ title_of_column[1] }}</h3>
			{% endif %}
			{% if second_row_title and second_row_links %}
				{% for index in second_row_title %}
					<a href="{{ second_row_links[loop.index-1] }}"><p class="footer-links">{{ index }}</p></a>
				{% endfor %}
			{% endif %}
		</div>
		<div class="footer-links-container">
			{% if title_of_column and title_of_column[2] %}
				<h3 class="column-title">{{ title_of_column[2] }}</h3>
			{% endif %}
			{% if third_row_title and third_row_links %}
				{% for index in third_row_title %}
					<a href="{{ third_row_links[loop.index-1] }}"><p class="footer-links">{{ index }}</p></a>
				{% endfor %}
			{% endif %}
		</div>
	</div>